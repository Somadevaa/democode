import java.util.*;
public class star {
    
    public static void main(String []args){
        int a=5;
        for(int i=0;i<a;i++){
            char l ='a';
            int n = 1;
            int e=2;
            for(int j=0;j<a;j++){
                if(i+j<=a-1){
                    
                      System.out.print(l++ +" ");
                      
            }
                else{
                System.out.print(i+" ");
                e+=2;}
                }
            System.out.println();
        }
    }
    
}

