import java.util.*;
public class star {
    
    public static void main(String []args){
        int a=5;
        for(int i=0;i<a;i++){
            char l ='A';
            int n = 1;
            int e=2;
            for(int j=0;j<a;j++){
                if(i>=j){
                    if(i%2==0){
                      System.out.print(n +" ");
                      n+=2;
                }
                else
                System.out.print(l++ +" ");
            }
                else{
                System.out.print(e+" ");
                e+=2;}
                }
            System.out.println();
        }
    }
    
}

1 2 4 6 8 
A B 2 4 6
1 3 5 2 4
A B C D 2
1 3 5 7 9

